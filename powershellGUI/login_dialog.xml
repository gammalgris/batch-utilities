<?xml version="1.0"?>
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="Window"
	Height="200"
	Width="360">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
		<Label x:Name = "TextBoxLabel1"
			Content="User"
			Grid.Column="1"
			Grid.Row="1"
			HorizontalAlignment="Right"
		/>
		<Label x:Name = "TextBoxLabel2"
			Content="Password"
			Grid.Column="1"
			Grid.Row="3"
			HorizontalAlignment="Right"
		/>
        <TextBox x:Name = "UserTextBox"
            Width="150"
            Grid.Column="3"
            Grid.Row="1"
			IsEnabled="False"
		/>
        <PasswordBox x:Name = "PaasswordTextBox"
            Width="150"
            Grid.Column="3"
            Grid.Row="3"
			PasswordChar="*"
		/>
        <Button x:Name = "LoginButton"
            Content="Log in"
            Grid.Column="1"
            Grid.Row="5"
			Width="90"
        />
        <Button x:Name = "CancelButton"
            Content="Cancel"
            Grid.Column="3"
            Grid.Row="5"
			Width="90"
        />
    </Grid>
</Window>